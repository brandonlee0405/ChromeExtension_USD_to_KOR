{
  "manifest_version": 2,

  "name": "USD to KOR",
  "description": "This extension shows the KOR currency over the USD currency on a page",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Click here!"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
